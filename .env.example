# Database Configuration
DATABASE_URL=postgres://ocpctl:ocpctl-dev-password@localhost:5432/ocpctl?sslmode=disable

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=123456789012

# S3 Artifact Storage
ARTIFACT_BUCKET_NAME=cluster-ops-artifacts
ARTIFACT_BUCKET_REGION=us-east-1

# SQS Queue
JOB_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/123456789012/ocpctl-jobs

# Secrets Manager
PULL_SECRET_ARN=arn:aws:secretsmanager:us-east-1:123456789012:secret:ocpctl/pull-secret

# API Configuration
API_PORT=8080
API_HOST=0.0.0.0
API_BASE_PATH=/api/v1

# Worker Configuration
WORKER_CONCURRENCY=5
WORKER_POLL_INTERVAL=10s

# Janitor Configuration
JANITOR_INTERVAL=1h
JANITOR_ORPHAN_CHECK_INTERVAL=6h

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Metrics
METRICS_PORT=9090
METRICS_ENABLED=true

# Feature Flags
ENABLE_IBM_CLOUD=false
ENABLE_OFFHOURS_SCALING=false
ENABLE_ORPHAN_SWEEP=false

# Development
ENVIRONMENT=development
DEBUG=false
